    <!-- Slick Carousel -->
    <link rel="stylesheet" href="/assets/vendor/slick/slick.css" />
    <link rel="stylesheet" href="/assets/vendor/slick/slick-theme.css" />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="/assets/vendor/font-awesome/css/font-awesome.min.css"
    />
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/assets/vendor/bootstrap/bootstrap.min.css" />
    <!-- Stylesheets -->
    <link href="/assets/css/style.css" rel="stylesheet" />

    <!--Favicon-->
    <link rel="shortcut icon" href="/assets/images/favIcon.png" type="image/x-icon" />
    <link rel="icon" href="/assets/images/favIcon.png" type="image/x-icon" />
  </head>

  <body>
  {% block navbar %}
    <nav class="navbar navbar-expand-lg site-navigation">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="{{nav.navLogo}}" alt="nav-logo" />
        </a>
        <button
          class="navbar-toggler collapsed"
          type="button"
          data-toggle="collapse"
          data-target="#sitenavbar"
        >
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <div class="collapse navbar-collapse" id="sitenavbar">
          <ul class="navbar-nav ml-auto main-nav">
          {% for i in range(0, nav.navLinks.length) %}
            <li class="nav-item">
              {% if nav.navLinks[i] == "home" %}
                <a class="nav-link" href="/">{{nav.navLinksText[i]}}</a>
              {% else %}
                <a class="nav-link" href="/{{nav.navLinks[i]}}">{{nav.navLinksText[i]}}</a>
              {% endif %}
            </li>
            {% endfor %}
            <li class="nav-item">
              <a class="nav-link btn btn-sm btn-primary btn-sm-rounded" href="/{{nav.navBtnLink}}">
                <span class="btn-area">
                  <span data-text="{{nav.navBtnText}}">
                    {{nav.navBtnText}}
                  </span>
                </span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  {% endblock %}

  {% block content %}
    {{content | safe}}
  {% endblock %}

  {% block workTogether %}
    <section class="site-cta">
      <div class="container">
        <div class="row">
          <div class="col-12 text-center">
            <h1 class="site-cta-title">{{workTogether.heading}}</h1>
            <ul class="site-cta-buttons">
              <li>
                <a href="/{{workTogether.submitBtn.btnLink}}" class="btn btn-secondary">
                  <span class="btn-area">
                    <span data-text="{{workTogether.submitBtn.btnText}}">
                      {{workTogether.submitBtn.btnText}}
                    </span>
                  </span>
                </a>
              </li>
              <li>
                <a href="/{{workTogether.convBtn.btnLink}}" class="btn btn-primary">
                  <span class="btn-area">
                    <span data-text="{{workTogether.convBtn.btnText}}">
                      {{workTogether.convBtn.btnText}}
                    </span>
                  </span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  {% endblock %}

{% block footer %}
<footer class="site-footer">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-12">
        <div class="site-footer-contact">
          <h5 class="site-footer-title">{{footer.contactsHeading}}</h5>
          <p>
            <a href="{{footer.contactsInfo[0].link}}" target="_blank">{{footer.contactsInfo[0].text}}</a><br>
            <a href="{{footer.contactsInfo[1].link}}">{{footer.contactsInfo[1].text}}</a><br>
            <a href="{{footer.contactsInfo[2].link}}">{{footer.contactsInfo[2].text}}</a>
          </p>
        </div>
      </div>
      <div class="col-lg-6 col-md-12">
        <div class="site-footer-map">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.019284634123!2d23.678123!3d37.945123!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14a1a2b3c4d5e6f7%3A0x8a9b0c1d2e3f4g5h!2sAg.%20Saranta%204%2C%20Moschato%20123%2056%2C%20Greece!5e0!3m2!1sen!2sus!4v1634567890123!5m2!1sen!2sus"
            width="100%"
            height="250"
            style="border:0;"
            allowfullscreen=""
            loading="lazy">
          </iframe>
        </div>
      </div>
    </div>
  </div>
</footer>
{% endblock %}
